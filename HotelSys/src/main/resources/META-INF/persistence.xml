<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HotelSysPU" transaction-type="JTA">
    <jta-data-source>jdbc/hotelsys</jta-data-source>
    <class>com.ambiciousteam.hotelsys.model.Corporate</class>
    <class>com.ambiciousteam.hotelsys.model.Employee</class>
    <class>com.ambiciousteam.hotelsys.model.Hosting</class>
    <class>com.ambiciousteam.hotelsys.model.Individual</class>
    <class>com.ambiciousteam.hotelsys.model.Person</class>
    <class>com.ambiciousteam.hotelsys.model.Room</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
